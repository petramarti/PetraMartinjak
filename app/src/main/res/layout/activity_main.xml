<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="hr.math.pemarti.kolokvij2.MainActivity"
    android:orientation="vertical">

    <EditText android:layout_width="match_parent" android:layout_height="wrap_content"
        android:id="@+id/enter_letter"
        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
        android:maxLength="1"/>

    <Button android:id="@+id/btn1"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:text="Kontakti koji pocinju na slovo"
        android:onClick="onClickYes"/>

    <Button android:id="@+id/btn2"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:text="Kontakti koji ne pocinju na slovo"
        android:onClick="onClickNo"/>


    <Button android:id="@+id/btn3"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:text="Baza"
        android:onClick="startDB"/>


</LinearLayout>
